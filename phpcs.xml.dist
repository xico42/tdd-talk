<?xml version="1.0"?>

<ruleset  name="PHP_CodeSniffer">
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="80"/>
    <arg name="cache" value=".phpcs-cache"/>
    <arg name="colors"/>

    <description>Histórico de Conferências - Code Sniffer</description>

    <file>app</file>
    <file>core</file>

    <rule  ref="PSR12"/>
</ruleset>
